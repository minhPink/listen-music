extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                .box-head 
                    +box-head(pageTitle)

        .row 
            each topic in topics
                .col-6.mb-3 
                    div(class="card")
                        img(src=`/images/anh-am-nhac_050504483.jpg`)
                        div(class="card-body")
                            h5(class="card-title") #{topic.title}
                            p(class="card-text") #{topic.description}
                            a(href=`/songs/${topic.slug}` class="btn btn-primary") Xem chi tiet 

                            //- chưa đẩy ảnh lên cloud
            